
<div class="main_content">
<h2>Game: <%= @game.title %></h2>
<br/>
<%= content_tag "div", class: "chess_board_partial col-sm-6 col-xs-12", data: { game_id: @game.id} do%>
	<%= render partial: "chess_board", locals: {game: @game, row_letters: @row_letters, row_numbers: @row_numbers }%>
<% end %>

<%= content_tag "div", class: "move_list_partial move-list col-sm-4" do %>
        <%= render partial: "move_list", locals: { white_moves: @white_moves, black_moves: @black_moves } %>
<% end %> 
<div class="players-list col-sm-2 col-xs-12">
  <h3>White Player:</h3>
  <%= @game.white_player.email %><br class="clear"/>

  <h3>Black Player:</h3>
  <% unless @game.black_player.nil?%>
    <%= @game.black_player.email %>
  <% else %>
    <%= link_to "Find a Friend", "#", :class => "btn btn-md btn-default" %>
  <% end %>
    <br class="clear"/>
    <br />
    <br />
    <br />
</div>
</div>

   <!-- Button trigger modal -->
<button type="button" class="btn-xs btn-primary" data-toggle="modal" data-target="#pawn-promote" id="pawn-promote-button">
</button>

<!-- Modal -->
<%= render "pawn_promote_modal" %>
